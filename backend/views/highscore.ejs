<section class="highscore-content">

    <div class="highscore-list">
        <h1> Highscore List </h1>
        <% if(list.length > 0 ) { %>
        <% list.forEach(function(item) { %>
        <div class="highscore-item">
            <div class="highscore-item-top">
                <h4><%= item.firstName%></h4>
                <span class="highscore-item-time"><%= item.completionTime%></span>
            </div>
            <p><%= item.wordLength%>-letter <%= item.uniqueLetters%></p>
            <p>Number of guesses: <%= item.numberOfGuesses%></p>
        </div>
        <% }); %>  
        <% } else { %>
                <p>It does not seem to be any played games with those settings on the list</p>
                <% } %>
    </div>
</section>

